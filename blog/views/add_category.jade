extends layout

block content
	h1=title
	ul.errors
		if errors
			each error, i in errors 
				li.alert.alert-danger #{error.msg}
	form(method="POST", action="/categories/add", enctype="multipart/form-data")
		.form-group
			label Category
			input.form-control(type="text", name="title")

		button.btn.btn-primary(type="submit") Save
