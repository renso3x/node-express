extends layout

block content
	.container
		h2 Edit Category

		ul.errors
			if errors
				each error, i in errors 
					li.alert.alert-danger #{error.msg}
		form(method="POST", action="/manage/category/edit/#{category._id}")
			input.form-control(type="hidden", name="_csrf", value="#{csrfToken}")
			.form-group
				label Category Name
				input.form-control(type="text", name="name", value="#{category.name}")

			button.btn.btn-primary(type="submit") Update